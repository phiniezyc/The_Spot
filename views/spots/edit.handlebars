<div class="container">
    <div class="row">
        <h2 class=" formPageAlignment col-xs-12 text-center">Edit {{spot.name}}</h2>

        <form class="form-group-lg col-xs-6 col-xs-offset-3" action='/spots/{{spot._id}}?_method=PUT' method='POST'>
            {{!-- NOTICE _method=PUT is required to edit --}}
            <div class="form-group">
                <input class="form-control" type='text' name='spot[name]' value='{{spot.name}}'>
            </div>

            <div class="form-group">
                <input class="form-control" type='text' name='spot[image]' value='{{spot.image}}'>
            </div>

            <div class="form-group">
                <input class="form-control" type='number' name='spot[cost]' value='{{spot.cost}}' step="0.01" min="0" required>
            </div>
            <div class="form-group">
                <input class="form-control" type='text' name='spot[description]' value='{{spot.description}}'>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
    </div>
    <div>
        <a class='text-center col-xs-12' href="/spots/{{spot._id}}">Back</a>
    </div>

</div>