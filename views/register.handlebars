<h1 id="register-page-heading">Register Page!</h1>

<form class="form-group-lg col-lg-12" action='/register' method="POST">
    <div class="form-group col-lg-5">
        <input class="form-control" text='text' name='username' placeholder='username'>
    </div>
    <div class="form-group col-lg-5">
        <input class="form-control" type='password' name='password' placeholder='password'>
    </div>
    <div class="text-center">
        <button class="btn btn-primary btn-lg ">Sign Up</button>
        {{!-- Button is auto a submit button if at bottom of a form --}}
    </div>
</form>